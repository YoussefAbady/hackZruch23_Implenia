<?xml version="1.0"?>
<odoo>
    <record id="litigations_division_action" model="ir.actions.act_window">
        <field name="name">divisions</field>
        <field name="res_model">division</field>
        <field name="view_mode">tree</field>
    </record>

     <record id="litigations_division_view_tree" model="ir.ui.view">
        <field name="name">litigations_division_tree</field>
        <field name="model">division</field>
        <field name="arch" type="xml">
            <tree string="divisions" editable="bottom"> 
                <field name="name"/>
                <field name="code"/>
            </tree>
        </field>
    </record>
</odoo>