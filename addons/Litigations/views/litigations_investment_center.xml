<?xml version="1.0"?>
<odoo>
    <record id="litigations_investment_center_action" model="ir.actions.act_window">
        <field name="name">Investment Centers</field>
        <field name="res_model">investment.center</field>
        <field name="view_mode">tree</field>
    </record>

     <record id="litigations_investment_center_view_tree" model="ir.ui.view">
        <field name="name">litigations_investment_center_tree</field>
        <field name="model">investment.center</field>
        <field name="arch" type="xml">
            <tree string="Investment Centers" editable="bottom"> 
                <field name="name"/>
                <field name="code"/>
            </tree>
        </field>
    </record>
</odoo>