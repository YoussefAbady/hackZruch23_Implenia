<?xml version="1.0"?>
<odoo>
    <record id="litigations_country_action" model="ir.actions.act_window">
        <field name="name">countries</field>
        <field name="res_model">country</field>
        <field name="view_mode">tree</field>
    </record>

     <record id="litigations_country_view_tree" model="ir.ui.view">
        <field name="name">litigations_country_tree</field>
        <field name="model">country</field>
        <field name="arch" type="xml">
            <tree string="countries" editable="bottom"> 
                <field name="name"/>
                <field name="code"/>
            </tree>
        </field>
    </record>
</odoo>